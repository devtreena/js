<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <div class="nav">
        <ul>
            <a style="background-color: rgb(10, 110, 69);" href="/"><li >Home</li></a>
            <a class="headerHover" href="/upload-file"><li>Upload file</li></a>
        </ul>
    </div>
    <br>
    <h2 style="color: black; margin-bottom: 10px;">List Users</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>firstName</th>
                <th>lastName</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            <% for( let i=0; i < dataUsers.length; i++) { %>
                <tr>
                    <td> <%= dataUsers[i].id %> </td>
                    <td> <%= dataUsers[i].firstName %> </td>
                    <td> <%= dataUsers[i].lastName %> </td>
                    <td style="display: flex; justify-content: center;">
                        <a class="getLink" href="/detail-user/<%= dataUsers[i].id %>" target="blank"><button> Detail </button></a>
                        <form action="/edit-user/<%= dataUsers[i].id %>" method="get">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/delete-user" method="post">
                            <input type="text" style="display: none;" value="<%= dataUsers[i].id %>" name="userId">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
   
    <h3 style="color: black;text-align: center; margin: 10px 0 5 0;">create-new-Users</h3>
    <div class="form-container" > 
         <form action="/create-newUsers" method="post">
            <input class="form-input" type="text" placeholder="FirstName" name="firstName"><br>
            <input class="form-input" type="text" placeholder="LastName" name="lastName"><br>
            <input class="form-input" type="text" placeholder="Age " name="age"><br>
            <input class="form-input" type="text" placeholder="Email" name="email"><br>
            <button class="btn-submit" type="submit">Submit</button>
         </form>
    </div>
</body>
</html>